{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "header": {
      "type": "object",
      "properties": {
        "app_id": {
          "type": "string",
          "description": "应用id",
          "maxLength": 32,
          "minLength": 1
        }
      },
      "required": ["app_id"]
    },
    "payload": {
      "type": "object",
      "properties": {
        "tools": {
          "type": "array",
          "maxItems": 6,
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "schema_type": {
                "type": "integer",
                "enum": [0, 1],
                "description": "openapi schema类型，0: json, 1: yaml"
              },
              "name": {
                "type": "string",
                "description": "工具的名称",
                "maxLength": 128,
                "minLength": 1
              },
              "description": {
                "type": "string",
                "description": "工具的描述",
                "maxLength": 512,
                "minLength": 1
              },
              "openapi_schema": {
                "type": "string",
                "description": "openapi schema base64的值",
                "minLength": 1
              }
            },
            "required": ["schema_type", "name", "description", "openapi_schema"]
          }
        }
      },
      "required": ["tools"]
    }
  },
  "required": ["header", "payload"]
}

