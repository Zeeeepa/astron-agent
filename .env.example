# Astron Agent - Environment Configuration Template
# 
# Copy this file to .env and fill in your values
# Usage: cp .env.example docker/astronAgent/.env

################################################################################
# Platform Configuration
################################################################################

# Platform App ID (Required)
PLATFORM_APP_ID=your_app_id_here

# Platform API Credentials (Required)
PLATFORM_API_KEY=your_api_key_here
PLATFORM_API_SECRET=your_api_secret_here

# Platform URLs
PLATFORM_BASE_URL=https://api.example.com
PLATFORM_WEB_URL=https://app.example.com

################################################################################
# Spark API Configuration
################################################################################

# Spark API Password (Required)
SPARK_API_PASSWORD=your_spark_password_here

# Spark API Settings
SPARK_API_TIMEOUT=30
SPARK_API_MAX_RETRIES=3

################################################################################
# Database Configuration
################################################################################

# MySQL Configuration
MYSQL_ROOT_PASSWORD=change_me_mysql_root_password
MYSQL_DATABASE=astron_agent
MYSQL_USER=astron
MYSQL_PASSWORD=change_me_mysql_password
MYSQL_PORT=3306

# Database Connection Pool
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_CONNECT_TIMEOUT=10

################################################################################
# Redis Configuration
################################################################################

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_me_redis_password
REDIS_DB=0

# Redis Connection Pool
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5

################################################################################
# Casdoor Authentication
################################################################################

# Casdoor Configuration
CASDOOR_ENDPOINT=http://localhost:8000
CASDOOR_CLIENT_ID=your_casdoor_client_id
CASDOOR_CLIENT_SECRET=your_casdoor_client_secret
CASDOOR_ORGANIZATION_NAME=astron-agent
CASDOOR_APPLICATION_NAME=astron-agent-app

# Casdoor Admin Credentials (Change immediately!)
CASDOOR_ADMIN_USER=admin
CASDOOR_ADMIN_PASSWORD=change_me_casdoor_admin_password

################################################################################
# Application Settings
################################################################################

# Environment Mode
NODE_ENV=production  # Options: development, staging, production

# Application Port
APP_PORT=80
API_PORT=8080

# Log Level
LOG_LEVEL=info  # Options: debug, info, warn, error

# Session Configuration
SESSION_SECRET=change_me_session_secret_at_least_32_chars_long
SESSION_TIMEOUT=3600  # Seconds

################################################################################
# Security Settings
################################################################################

# JWT Configuration
JWT_SECRET=change_me_jwt_secret_at_least_32_chars_long
JWT_EXPIRATION=86400  # Seconds (24 hours)

# CORS Settings
CORS_ORIGINS=http://localhost,http://localhost:80
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

################################################################################
# Email Configuration (Optional)
################################################################################

# SMTP Settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_NAME=Astron Agent
SMTP_FROM_EMAIL=noreply@example.com

# Email Features
EMAIL_VERIFICATION_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true

################################################################################
# Storage Configuration (Optional)
################################################################################

# File Storage
STORAGE_TYPE=local  # Options: local, s3, azure, gcp
STORAGE_PATH=/app/storage

# AWS S3 (if STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=astron-agent-storage

################################################################################
# Monitoring & Observability (Optional)
################################################################################

# Application Performance Monitoring
APM_ENABLED=false
APM_SERVICE_NAME=astron-agent
APM_SERVER_URL=http://apm-server:8200

# Metrics
METRICS_ENABLED=false
METRICS_PORT=9090

# Logging
LOG_FORMAT=json  # Options: json, text
LOG_OUTPUT=stdout  # Options: stdout, file, both

################################################################################
# Feature Flags (Optional)
################################################################################

# Feature Toggles
ENABLE_REGISTRATION=true
ENABLE_API_DOCS=true
ENABLE_HEALTH_CHECK=true
ENABLE_METRICS=false

# Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false

################################################################################
# Backup Configuration (Optional)
################################################################################

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM (cron format)
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/backups

# Remote Backup (Optional)
REMOTE_BACKUP_ENABLED=false
REMOTE_BACKUP_TYPE=s3  # Options: s3, azure, gcp, ftp
REMOTE_BACKUP_BUCKET=astron-agent-backups

################################################################################
# Development Settings (Development Only)
################################################################################

# Debug Mode (NEVER enable in production!)
DEBUG=false
DEBUG_SQL=false

# Hot Reload
HOT_RELOAD_ENABLED=false

# Test Data
SEED_TEST_DATA=false

################################################################################
# Notes
################################################################################

# Security Best Practices:
# 1. Change all default passwords immediately
# 2. Use strong, random secrets (32+ characters)
# 3. Never commit this file to version control
# 4. Use environment-specific .env files
# 5. Rotate secrets regularly
# 6. Use secrets management (Vault, AWS Secrets Manager, etc.) in production

# Required Variables:
# - PLATFORM_APP_ID
# - PLATFORM_API_KEY
# - PLATFORM_API_SECRET
# - SPARK_API_PASSWORD
# - MYSQL_ROOT_PASSWORD
# - MYSQL_PASSWORD
# - REDIS_PASSWORD
# - CASDOOR_ADMIN_PASSWORD
# - SESSION_SECRET
# - JWT_SECRET

# Validation:
# Run: ./deploy.sh --validate-config
# to check if all required variables are set

